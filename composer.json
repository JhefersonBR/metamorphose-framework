{
    "name": "metamorphose/framework",
    "description": "Metamorphose Framework - Kernel de aplicação PHP modular e multi-tenant",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "psr/container": "^2.0",
        "psr/http-server-middleware": "^1.0",
        "psr/log": "^3.0",
        "monolog/monolog": "^3.0",
        "php-di/php-di": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Metamorphose\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Metamorphose\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}

